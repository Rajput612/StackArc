---
import MainLayout from './MainLayout.astro';
import CodePlayground from '../components/CodePlayground.jsx';
import CourseSidebar from '../components/CourseSidebar.astro';

export interface CoursePageProps {
  title: string;
  introCode?: string;
  sections?: Array<{
    title: string;
    content: string;
    code?: string;
  }>;
}

const { 
  title = 'Python Course', 
  introCode = '# Write your Python code here', 
  sections = [] 
} = Astro.props;
---

<MainLayout title={title}>
  <div class="flex">
    <CourseSidebar courseType="python-basics" />
    <div class="flex-1 max-w-4xl mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold mb-8">{title}</h1>

      <div class="space-y-12">
        <!-- Introduction Section -->
        <section>
          <h2 class="text-2xl font-semibold mb-4">Introduction</h2>
          <CodePlayground client:load initialCode={introCode} />
        </section>

        <!-- Dynamic Sections -->
        {sections.map((section) => (
          <section>
            <h2 class="text-2xl font-semibold mb-4">{section.title}</h2>
            <div class="text-gray-600 dark:text-gray-300 mb-4">
              <Fragment set:html={section.content} />
            </div>
            {section.code && (
              <CodePlayground client:load initialCode={section.code} />
            )}
          </section>
        ))}
      </div>
    </div>
  </div>
</MainLayout>
