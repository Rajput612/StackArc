---
import MainLayout from '../../layouts/MainLayout.astro';
import LinkedListProblems from '../../components/LinkedListProblems';
---

<MainLayout title="Linked List Problems">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">Linked List Practice Problems</h1>
    
    <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Problem Collection</h2>
      <p class="text-gray-600 mb-6">
        A comprehensive collection of linked list problems ranging from medium to hard difficulty.
        Each problem includes a detailed solution and explanation.
      </p>
      
      <LinkedListProblems client:load />
    </div>
  </div>
</MainLayout>