---
import CourseCard from './CourseCard.astro';

interface Course {
  title: string;
  instructor: string;
  rating: number;
  students: number;
  price: number;
  image: string;
  icon: string;
  badge?: string;
  badgeColor?: string;
}

interface Props {
  courses: Course[];
  title: string;
  viewAllLink: string;
  buttonText?: string;
}

const { courses, title, viewAllLink, buttonText } = Astro.props;
---

<section>
  <div class="flex justify-between items-center mb-8">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
      {title}
    </h2>
    <a href={viewAllLink} class="text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 font-medium">
      View All â†’
    </a>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {courses.map(course => (
      <CourseCard course={course} buttonText={buttonText} />
    ))}
  </div>
</section>
