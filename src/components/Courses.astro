---
const liveCourses = [
  {
    title: 'Python Fundamentals',
    description: 'Master the basics of Python programming with hands-on exercises.',
    level: 'Beginner',
    duration: '8 weeks',
    enrolled: 1234,
    image: '/images/python-basics.jpg'
  },
  {
    title: 'Data Structures & Algorithms',
    description: 'Learn essential DSA concepts with Python implementations.',
    level: 'Intermediate',
    duration: '12 weeks',
    enrolled: 856,
    image: '/images/dsa.jpg'
  },
  {
    title: 'Advanced System Design',
    description: 'Design and implement scalable systems using Python.',
    level: 'Advanced',
    duration: '10 weeks',
    enrolled: 567,
    image: '/images/system-design.jpg'
  }
];

const upcomingCourses = [
  {
    title: 'Machine Learning with Python',
    description: 'Dive into ML algorithms and implementations.',
    startDate: '2024-02-01',
    duration: '14 weeks',
    level: 'Advanced',
    image: '/images/machine-learning.jpg'
  },
  {
    title: 'Web Development with Django',
    description: 'Build modern web applications with Django framework.',
    startDate: '2024-02-15',
    duration: '10 weeks',
    level: 'Intermediate',
    image: '/images/django.jpg'
  }
];
---

<section class="py-24 bg-white dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Live Courses -->
    <div class="mb-20">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-extrabold text-gray-900 dark:text-white sm:text-4xl">
          Live Courses
        </h2>
        <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 dark:text-gray-400 sm:mt-4">
          Join our active courses and start learning today
        </p>
      </div>
      
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        {liveCourses.map(course => (
          <div class="flex flex-col overflow-hidden rounded-lg shadow-lg transition-transform hover:scale-105">
            <div class="flex-shrink-0">
              <img class="h-48 w-full object-cover" src={course.image} alt={course.title} />
            </div>
            <div class="flex flex-1 flex-col justify-between bg-white dark:bg-gray-800 p-6">
              <div class="flex-1">
                <div class="flex items-center space-x-3">
                  <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200">
                    {course.level}
                  </span>
                  <span class="text-sm text-gray-500 dark:text-gray-400">
                    {course.duration}
                  </span>
                </div>
                <a href="#" class="mt-2 block">
                  <p class="text-xl font-semibold text-gray-900 dark:text-white">{course.title}</p>
                  <p class="mt-3 text-base text-gray-500 dark:text-gray-400">{course.description}</p>
                </a>
              </div>
              <div class="mt-6">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">
                      {course.enrolled.toLocaleString()} students enrolled
                    </span>
                  </div>
                </div>
                <div class="mt-3">
                  <a href="/login" class="block w-full rounded-md bg-indigo-600 px-4 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    Enroll Now
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Upcoming Courses -->
    <div>
      <div class="text-center mb-12">
        <h2 class="text-3xl font-extrabold text-gray-900 dark:text-white sm:text-4xl">
          Upcoming Courses
        </h2>
        <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 dark:text-gray-400 sm:mt-4">
          Preview our upcoming courses and join the waitlist
        </p>
      </div>
      
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
        {upcomingCourses.map(course => (
          <div class="flex flex-col overflow-hidden rounded-lg shadow-lg transition-transform hover:scale-105">
            <div class="flex-shrink-0">
              <img class="h-48 w-full object-cover" src={course.image} alt={course.title} />
            </div>
            <div class="flex flex-1 flex-col justify-between bg-white dark:bg-gray-800 p-6">
              <div class="flex-1">
                <div class="flex items-center space-x-3">
                  <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200">
                    {course.level}
                  </span>
                  <span class="text-sm text-gray-500 dark:text-gray-400">
                    Starts {new Date(course.startDate).toLocaleDateString()}
                  </span>
                </div>
                <a href="#" class="mt-2 block">
                  <p class="text-xl font-semibold text-gray-900 dark:text-white">{course.title}</p>
                  <p class="mt-3 text-base text-gray-500 dark:text-gray-400">{course.description}</p>
                </a>
              </div>
              <div class="mt-6">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">
                      Duration: {course.duration}
                    </span>
                  </div>
                </div>
                <div class="mt-3">
                  <a href="/waitlist" class="block w-full rounded-md bg-green-600 px-4 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">
                    Join Waitlist
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
