---
interface Category {
  title: string;
  icon: string;
  courses: number;
  color: string;
}

interface Props {
  categories: Category[];
  title: string;
  viewAllLink: string;
  gridCols?: string;
}

const { categories, title, viewAllLink, gridCols = "grid-cols-1 md:grid-cols-3" } = Astro.props;
---

<section>
  <div class="flex justify-between items-center mb-8">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
      {title}
    </h2>
    <a href={viewAllLink} class="text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 font-medium">
      View All â†’
    </a>
  </div>
  <div class={`grid ${gridCols} gap-6`}>
    {categories.map(category => (
      <a href={`/categories/${category.title.toLowerCase()}`} class="group">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm hover:shadow-md transition-all p-8 text-center border border-gray-100 dark:border-gray-700">
          <div class="text-5xl mb-4 transform group-hover:scale-110 transition-transform">
            {category.icon}
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
            {category.title}
          </h3>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            {category.courses} courses
          </p>
        </div>
      </a>
    ))}
  </div>
</section>
